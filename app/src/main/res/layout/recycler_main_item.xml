<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layoutDirection="ltr"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_back_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back_gray_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_price"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_back_img"
        app:layout_constraintEnd_toEndOf="@+id/view_back_img"
        app:layout_constraintStart_toStartOf="@+id/view_back_img"
        app:layout_constraintTop_toTopOf="@+id/view_back_img"
        app:srcCompat="@drawable/ic_18" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sans_fa_name_regular"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="@+id/img_price"
        app:layout_constraintEnd_toStartOf="@+id/img_price"
        app:layout_constraintTop_toTopOf="@+id/img_price"
        app:layout_constraintVertical_bias="0.543"
        tools:text="گرم طلای 18 عیار" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/sans_fa_name_regular"
        android:gravity="left"
        android:textColor="@color/gold_text"
        android:textSize="40px"
        app:layout_constraintBottom_toBottomOf="@+id/txt_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_name"
        app:layout_constraintVertical_bias="0.0"
        tools:text="2/200/000" />



</androidx.constraintlayout.widget.ConstraintLayout>